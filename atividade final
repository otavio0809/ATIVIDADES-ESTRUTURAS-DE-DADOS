            tree.root = tree.insert(tree.getRoot(), nome)
            print(f"âœ… Contato '{nome}' adicionado.")

        elif choice == "2":
            print("\nðŸ“‹ Contatos em ordem alfabÃ©tica:")
            tree.inOrder(tree.getRoot())

        elif choice == "3":
            nome = input("Digite o nome a procurar: ")
            found = tree.search(tree.getRoot(), nome)
            if found:
                print(f"ðŸ”Ž Contato '{nome}' encontrado!")
            else:
                print(f"âŒ Contato '{nome}' nÃ£o estÃ¡ na agenda.")

        elif choice == "4":
            print("ðŸ‘‹ Saindo...")
            break
        else:
            print("OpÃ§Ã£o invÃ¡lida!")

menu()
